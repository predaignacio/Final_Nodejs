extends layout

block content
  h1=title
  //p=JSON.stringify(flashmsg)
  p
    a(href="/employees/new") New
  table
    tr
      th Id
      th Nombre
      th Apellido
      th E-Mail
      th Options
    - employees.forEach(function(v,i){
    tr
      td=i
      td=v.nombre
      td=v.apellido
      td=v.email
      td
        a(href="/employees/edit/"+v._id) Edit
        | 
        a(href="/employees/delete/"+v._id) Delete
    - });